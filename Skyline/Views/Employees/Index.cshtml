@if (Model.Count() > 0)
{

    <form method="get" asp-controller="Employees" asp-action="GetIndexView" class="col-3">
        <div class="mt-3 input-group ">
            <input name="search" value="@ViewBag.SearchText" class="form-control" />
            <button type="submit" class="input-group-append btn btn-secondary"><i class="bi bi-search"></i>Search</button>
        </div>
    </form>

    <table class="table table-bordered table-striped table-hover caption-top text-center">
        <caption class="text-center">Staff</caption>
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(e => e.Id)</th>
                <th>@Html.DisplayNameFor(e => e.FullName)</th>
                <th>@Html.DisplayNameFor(e => e.Position)</th>
                <th>@Html.DisplayNameFor(e => e.Salary)</th>
                <th>@Html.DisplayNameFor(e => e.ImageFile)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in Model)
            {
                <tr>
                    <td>@emp.Id</td>
                    <td>@emp.FullName</td>
                    <td>@emp.Position</td>
                    <td>@emp.Salary</td>
                    <td><img src="@emp.ImagePath" /></td>
                    <td>
                        <a asp-controller="Employees" asp-action="GetDetailsView" asp-route-id="@emp.Id" style="text-decoration:none"
                          class="btn btn-success"
                         title="Details">
                            <i class="bi bi-list-ul"></i>
                        </a>

                        <a asp-controller="Employees" asp-action="GetEditView" asp-route-id="@emp.Id" style="text-decoration:none"
                           class="btn btn-primary" title="Edit">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                        <a asp-controller="Employees" asp-action="GetDeleteView" asp-route-id="@emp.Id" style="text-decoration:none;"
c                           class="btn btn-danger" 
                               title="Delete">
                            <i class="bi bi-trash"></i>
                         
                        </a>
                    </td>
                </tr>

            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3" style="text-align:right;">Total</th>
                <th colspan="2" style="text-align:center">@Model.Sum(e => e.Salary).ToString("C", CultureInfo.CreateSpecificCulture("ar-EG"))</th>
            </tr>
        </tfoot>
    </table>
}
else
{
    <h1 class="alert alert-danger text-center">There is no employee</h1>
}

@if (Model.Count() > 0)
{
    @foreach (var emp in Model)
    {
        <div class="card text-center mb-3" style="display:inline-block; width:18rem;">
            <div class="card-header">@emp.FullName</div>
            <div class="card-body">
                <h5 class="card-title">@emp.Position</h5>
                <td><img src="@emp.ImagePath" /></td>
                <p class="card-text">@emp.NationalId</p>
            </div>
            <div class="card-footer">@emp.Salary</div>
        </div>
    }
}
else
{
    <h1 class="alert alert-danger text-center">There is no employee</h1>
}

<hr />
<div class="row">
    <ul class="list-group col-3 text-center">
        <li class="list-group-item active fw-bold">Employee Countries</li>
        @foreach (var country in ViewBag.EmpCountries)
        {
            <li class="list-group-item list-group-item-action">@country</li>
        }
    </ul>
</div>