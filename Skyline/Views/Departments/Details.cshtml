@model Skyline.Models.Department

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Department</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    @if(Model.Employees.Count>0)
    {
        <ul class="list-group text-center col-4">
            <li class="list-group-item active border">Employees</li>
            @foreach (var employee in Model.Employees)
            {
                <li class="list-group-item list-group-item-action">@employee.FullName (@employee.Position)</li>
            }
        </ul>
    }
    else
    {
        <h1 class="alert alert-danger text-center col-4" style="color:darked;">There is no Employee</h1>
    }

    

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
